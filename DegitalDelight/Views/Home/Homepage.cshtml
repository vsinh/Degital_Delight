                </div>
                <!-- End .slick-single-layout -->

            </div>
        </div>
    </div>
    <!-- End Testimonila Area  -->
    <!-- Start New Arrivals Product Area  -->
    <div class="axil-new-arrivals-product-area bg-color-white axil-section-gap pb--0">
        <div class="container">
            <div class="product-area pb--50">
                <div class="section-title-wrapper">
                    <span class="title-highlighter highlighter-primary"><i class="far fa-shopping-basket"></i>Trong tuần</span>
                    <h2 class="title">Hàng mới về</h2>
                </div>
                <div class="new-arrivals-product-activation slick-layout-wrapper--30 axil-slick-arrow arrow-top-slide">
                    @foreach (var item in Model.Take(4))
                    {
                        <div class="slick-single-layout">
                            <div class="axil-product product-style-two">
                                <div class="thumbnail">
                                    <a asp-action="Product" asp-controller="Product" asp-route-id="@item.Id">
                                        <img data-sal="zoom-out" data-sal-delay="100" data-sal-duration="500" style="width: 276px; height: 276px;" src="@item.Picture" alt="Product Images">
                                    </a>

                                </div>
                                <div class="product-content">
                                    <div class="inner">
                                        <h5 class="title"><a asp-action="Product" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a></h5>
                                        <div class="product-price-variant">
                                            @*  @if (item.OldPrice.HasValue)
                                        {
                                        <span class="price old-price">@item.OldPrice VND</span>
                                        } *@
                                            <span class="price current-price">@item.Price VND</span>
                                        </div>
                                        <div class="product-hover-action">
                                            <ul class="cart-action">
                                                <li class="quickview"><a href="#" data-bs-toggle="modal" data-bs-target="#quick-view-modal"><i class="far fa-eye"></i></a></li>

                                                <form method="post" asp-controller="Cart" asp-action="AddItemToCart">
                                                    <input type="hidden" name="productId" value="@item.Id" />
