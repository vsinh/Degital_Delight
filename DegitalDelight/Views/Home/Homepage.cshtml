<!-- Trong thư mục Views/Home -->
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
    Layout = "../Shared/_LayoutMain.cshtml";
    ViewData["ProductImageUrl"] = "/img/product";
}

<main class="main-wrapper">
    <div class="axil-main-slider-area main-slider-style-1">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 col-sm-6">
                    <div class="main-slider-content">
                        <div class="slider-content-activation-one">
                            @foreach (var item in Model.Take(4))
                            {
                                <div class="single-slide slick-slide" data-sal="slide-up" data-sal-delay="400" data-sal-duration="800">
                                    <span class="subtitle"><i class="fas fa-fire"></i>Deal khủng trong tuần</span>
                                    <h1 class="title">@item.Name</h1>
                                    <div class="slide-action">
                                        <div class="shop-btn">
                                            <a asp-controller="Shop" asp-action="Shop" class="axil-btn btn-bg-white"><i class="fal fa-shopping-cart"></i>Mua ngay</a>
                                        </div>
                                        <div class="item-rating">
                                            <div class="thumb">
                                                <ul>
                                                    @for (int i = 0; i < 4; i++)
                                                    {
                                                        <li><img src="~/etrade/assets/images/others/author@(i + 1).png" alt="Author"></li>
                                                    }
                                                </ul>
                                            </div>
                                            <div class="content">
                                                <span class="rating-icon">
                                                    <i class="fas fa-star"></i>
                                                    <i class="fas fa-star"></i>
                                                    <i class="fas fa-star"></i>
                                                    <i class="fas fa-star"></i>
                                                    <i class="fal fa-star"></i>
                                                </span>
                                                <span class="review-text">
                                                    <span>100+</span> Reviews
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-7 col-sm-6">
                    <div class="main-slider-large-thumb">
                        <div class="slider-thumb-activation-one axil-slick-dots">
                            @foreach (var item in Model.Take(4))
                            {
                                <div class="single-slide slick-slide" data-sal="slide-up" data-sal-delay="600" data-sal-duration="1500">
                                    <img src="@ViewData["ProductImageUrl"]/@item.Picture" alt="Product">
                                    <div class="product-price">
                                        <span class="text">From</span>
                                        <span class="price-amount">@item.Price VND</span>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <ul class="shape-group">
            <li class="shape-1"><img src="~/etrade/assets/images/others/shape-1.png" alt="Shape"></li>
            <li class="shape-2"><img src="~/etrade/assets/images/others/shape-2.png" alt="Shape"></li>
        </ul>
    </div>

    <!-- Start Categorie Area  -->
    <div class="axil-categorie-area bg-color-white axil-section-gapcommon">
        <div class="container">
            <div class="section-title-wrapper">
                <span class="title-highlighter highlighter-secondary"> <i class="far fa-tags"></i> Danh mục</span>
                <h2 class="title">Lướt danh mục</h2>
            </div>
            <div class="categrie-product-activation slick-layout-wrapper--15 axil-slick-arrow  arrow-top-slide">
                <div class="slick-single-layout">
                    <div class="categrie-product" data-sal="zoom-out" data-sal-delay="500" data-sal-duration="500">
                        <a asp-action="Shop" asp-controller="Shop" asp-route-id="1">
                            <img class="img-fluid" src="~/etrade/assets/images/product/categories/elec-6.png" alt="product categorie">
                            <h6 class="cat-title">Laptop</h6>
                        </a>
                    </div>
                    <!-- End .categrie-product -->
                </div>
                <div class="slick-single-layout">
                    <div class="categrie-product" data-sal="zoom-out" data-sal-delay="200" data-sal-duration="500">
                        <a asp-action="Shop" asp-controller="Shop" asp-route-id="2">
                            <img class="img-fluid" src="~/etrade/assets/images/product/categories/elec-4.png" alt="product categorie">
                            <h6 class="cat-title">Điện thoại</h6>
                        </a>
                    </div>
                    <!-- End .categrie-product -->
                </div>
                <!-- End .slick-single-layout -->
                <div class="slick-single-layout">
                    <div class="categrie-product" data-sal="zoom-out" data-sal-delay="400" data-sal-duration="500">
                        <a asp-action="Shop" asp-controller="Shop" asp-route-id="5">
                            <img class="img-fluid" src="~/etrade/assets/images/product/categories/elec-11.png" alt="product categorie">
                            <h6 class="cat-title">Phụ kiện</h6>
                        </a>
                    </div>
                    <!-- End .categrie-product -->
                </div>
                <!-- End .slick-single-layout -->
                <div class="slick-single-layout">
                    <div class="categrie-product" data-sal="zoom-out" data-sal-delay="700" data-sal-duration="500">
                        <a asp-action="Shop" asp-controller="Shop" asp-route-id="7">
                            <img class="img-fluid" src="~/etrade/assets/images/product/categories/elec-7.png" alt="product categorie">
                            <h6 class="cat-title">Thiết bị mạng</h6>
                        </a>
                    </div>
                    <!-- End .categrie-product -->
                </div>
                <!-- End .slick-single-layout -->
                <div class="slick-single-layout">
                    <div class="categrie-product" data-sal="zoom-out" data-sal-delay="800" data-sal-duration="500">
                        <a asp-action="Shop" asp-controller="Shop" asp-route-id="9">
                            <img class="img-fluid" src="~/etrade/assets/images/product/categories/elec-8.png" alt="product categorie">
                            <h6 class="cat-title">Phụ kiện gaming</h6>
                        </a>
                    </div>
                    <!-- End .categrie-product -->
                </div>
                <!-- End .slick-single-layout -->
                <div class="slick-single-layout">
                    <div class="categrie-product">
                        <a asp-action="Shop" asp-controller="Shop" asp-route-id="10">
                            <img class="img-fluid" src="~/etrade/assets/images/product/categories/elec-9.png" alt="product categorie">
                            <h6 class="cat-title">Tai nghe</h6>
                        </a>
                    </div>
                    <!-- End .categrie-product -->
                </div>
                <!-- End .slick-single-layout -->
            </div>
        </div>
    </div>
    <!-- End Categorie Area  -->
    <!-- Poster Countdown Area  -->
    <div class="axil-poster-countdown">
        <div class="container">
            <div class="poster-countdown-wrap bg-lighter">
                <div class="row">
                    <div class="col-xl-5 col-lg-6">
                        <div class="poster-countdown-content">
                            <div class="section-title-wrapper">
                                <span class="title-highlighter highlighter-secondary"> <i class="fal fa-headphones-alt"></i> Đừng bỏ lỡ!!</span>
                                <h2 class="title">Tăng cường trải nghiệm nghe nhạc</h2>
