                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Poster Countdown Area  -->
    <!-- Start Expolre Product Area  -->
    <div class="axil-product-area bg-color-white axil-section-gap">
        <div class="container">
            <div class="section-title-wrapper">
                <span class="title-highlighter highlighter-primary"> <i class="far fa-shopping-basket"></i> Các sản phẩm</span>
                <h2 class="title">Khám phá</h2>
            </div>
            <div class="explore-product-activation slick-layout-wrapper slick-layout-wrapper--15 axil-slick-arrow arrow-top-slide">
                <div class="slick-single-layout">
                    <div class="row row--15">
                        @foreach (var item in Model.Take(8))
                        {
                            <div class="col-xl-3 col-lg-4 col-sm-6 col-12 mb--30">
                                <div class="axil-product product-style-one">
                                    <div class="thumbnail">
                                        <a asp-action="Product" asp-controller="Product" asp-route-id="@item.Id">
                                            <img data-sal="zoom-out" data-sal-delay="200" data-sal-duration="800" loading="lazy" class="main-img" style="width: 276px; height: 276px;" src="@item.Picture" alt="Product Images">
                                            <img class="hover-img" src="@item.Picture" alt="Product Images">
                                        </a>
                                        <div class="label-block label-right">
                                            @*      <div class="product-badget">@item.Discounts</div> *@
                                        </div>
                                        <div class="product-hover-action">
                                            <ul class="cart-action">
                                                <li class="quickview"><a href="#" data-bs-toggle="modal" data-bs-target="#quick-view-modal"><i class="far fa-eye"></i></a></li>
                                                <li class="select-option">
                                                    <a href="single-product.html">
                                                        Thêm vào giỏ
                                                    </a>
                                                </li>
                                                <li class="wishlist"><a href="wishlist.html"><i class="far fa-heart"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <div class="inner">
                                            <h5 class="title"><a asp-action="Product" asp-controller="Product" asp-route-id="@item.Id">@item.Name</a></h5>
                                            <div class="product-price-variant">
                                                <span class="price current-price">@item.Price</span>
                                                <span class="price old-price">@item.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- End Expolre Product Area  -->
    <!-- Start Testimonila Area  -->
