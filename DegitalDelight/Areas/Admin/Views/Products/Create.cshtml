@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
}
<div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="tm-block-title d-inline-block">Add Product</h2>
                        </div>
                    </div>
                    <div>
                        <form asp-action="Create" asp-controller="Products" method="post" class="tm-edit-product-form">
                            <div class="col-xl-12 col-lg-12 col-md-12">

                                <div class="form-group mb-3">
                                    <label for="name">
                                        Product Name
                                    </label>
                                    <input id="name"
                                           name="name"
                                           type="text"
                                           class="form-control validate"
                                           required />
                                </div>
                                <div class="form-group mb-3">
                                    <label for="description">Description</label>
                                    <textarea class="form-control validate"
                                              rows="3"
                                              required></textarea>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="category">Category</label>
                                    <select class="custom-select tm-select-accounts"
                                            id="category">
                                        <option selected>Select category</option>
                                        <option value="1">New Arrival</option>
                                        <option value="2">Most Popular</option>
                                        <option value="3">Trending</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                                        <label for="expire_date">
                                            Expire Date
                                        </label>
                                        <input id="expire_date"
                                               name="expire_date"
                                               type="text"
                                               class="form-control validate"
                                               data-large-mode="true" />
                                    </div>
                                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                                        <label for="stock">
                                            Units In Stock
                                        </label>
                                        <input id="stock"
                                               name="stock"
                                               type="text"
                                               class="form-control validate"
                                               required />
                                    </div>
                                </div>

                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                                <div class="tm-product-img-dummy mx-auto">
                                    <i class="fas fa-cloud-upload-alt tm-upload-icon"
                                       onclick="document.getElementById('fileInput').click();"></i>
                                </div>
                                <div class="custom-file mt-3 mb-3">
                                    <input id="fileInput" type="file" style="display:none;" />
                                    <input type="button"
                                           class="btn btn-primary btn-block mx-auto"
                                           value="UPLOAD PRODUCT IMAGE"
                                           onclick="document.getElementById('fileInput').click();" />
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
                                <button type="button" class="btn btn-primary btn-block text-uppercase" onclick="addInputFields()">Add Product Fields</button>
                            </div>

                            <div id="atfield">

                            </div>

                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <footer class="tm-footer row tm-mt-small">
        <div class="col-12 font-weight-light">
            <p class="text-center text-white mb-0 px-4 small">
                Copyright &copy; <b>2018</b> All rights reserved.

                Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
            </p>
        </div>
    </footer>
    <script>
        var inputCounter = 1;

        function addInputFields() {
           
            var newRow = document.getElementById('atfield');
            var oldhtml = newRow.innerHTML;
            newRow.className = 'row tm-edit-product-row align-items-center';
            var currentCounter = inputCounter++;

            newRow.innerHTML = oldhtml + `
            <div class="row tm-edit-product-row align-items-center">
                    <div class="col-xl-5 col-lg-5 col-md-5">
                        <div class="form-group mb-3">
                            <label for="name${currentCounter}">Property Name</label>
                            <input id="propertyname${currentCounter}" name="name${currentCounter}" type="text" class="form-control validate" required />
                        </div>
                    </div>
                    <div class="col-xl-5 col-lg-5 col-md-5">
                        <div class="form-group mb-3">
                            <label for="value${currentCounter}">Product Value</label>
                            <input id="valuename${currentCounter}" name="value${currentCounter}" type="text" class="form-control validate" required />
                        </div>
                    </div>
                    <div class="col-xl-2 col-lg-2 col-md-2">
                        <button type="button" class="btn btn-sm btn-danger btn-block mt-md-1 mt-1" onclick="removeInputFields(this)">X</button>
                    </div>
                             </div>
                `;
        }
        function removeInputFields(button) {
            var row = button.parentElement.parentElement;
            row.parentNode.removeChild(row);
        }
    </script>
