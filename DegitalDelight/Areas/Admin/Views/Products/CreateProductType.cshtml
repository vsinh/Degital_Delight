@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
}
<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Thêm loại sản phẩm</h2>
                    </div>
                </div>
                <div>
                    <form asp-action="CreateProductType" asp-controller="Products" method="post" class="tm-edit-product-form">
                        <div class="col-xl-12 col-lg-12 col-md-12">

                            <div class="form-group mb-3">
                                <label for="name">
                                    Tên loại sản phẩm
                                </label>
                                <input id="name"
                                       name="name"
                                       type="text"
                                       class="form-control validate"
                                       required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="description">Mô tả</label>
                                <textarea class="form-control validate"
                                          rows="3"
                                          required></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Thêm loại sản phẩm</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
