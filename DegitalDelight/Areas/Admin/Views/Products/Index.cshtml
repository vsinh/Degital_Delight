@{
	Layout = "../Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<DegitalDelight.Models.Product>
<div class="container mt-5">
	<div class="row tm-content-row">
		<div class="col-12 tm-block-col">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<h2 class="tm-block-title">Search</h2>
				<div style="display: inline-flex; width: 100%">
					<input id="search_input" style="flex-grow: 1; background-color: #50657b; color: white" placeholder="Search" class="placeholder-white" onkeyup="Search()">
					<i class="fa fa-search" style="float: right; font-size: 50px; color: white; padding-left: 10px"></i>
					</input>
				</div>
			</div>
		</div>
	</div>
	<div class="row tm-content-row">
		<div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
			<div class="tm-bg-primary-dark tm-block tm-block-products">
				<div class="tm-product-table-container">
					<table id="table1" class="table table-hover tm-table-small tm-product-table">
						<thead>
							<tr>
								<th scope="col">PRODUCT NAME</th>
								<th scope="col">PRODUCT TYPE</th>
								<th scope="col">BRAND</th>
								<th scope="col">PRICE (VND)</th>
								<th scope="col">IN STOCK</th>
								<th scope="col">&nbsp;</th>
							</tr>
						</thead>
						<tbody id="product_table">
							@foreach(var product in Model)
							{
								<tr>
									<td class="tm-product-name">@product.Name</td>
									<td>@product.ProductType.Name</td>
									<td>@product.Brand</td>
									<td>@product.Price</td>
									<td>@product.Stock</td>
									<td>
										<a href="#" class="tm-product-delete-link">
											<i class="far fa-trash-alt tm-product-delete-icon"></i>
										</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<!-- table container -->
				<a asp-action="Create" asp-controller="Products"
				   class="btn btn-primary btn-block text-uppercase mb-3">Add new product</a>
				<button class="btn btn-primary btn-block text-uppercase">
					Delete selected products
				</button>
			</div>
		</div>
		<div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
