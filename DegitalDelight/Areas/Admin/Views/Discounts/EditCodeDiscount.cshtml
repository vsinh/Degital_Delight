@{
	Layout = "../Shared/_LayoutAdmin.cshtml";
}
@model Discount;
<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Edit Code Discount</h2>
					</div>
				</div>
				<div>
					<form asp-action="EditCodeDiscount" asp-controller="Discounts" method="post" class="tm-edit-product-form">
						<div class="col-xl-12 col-lg-12 col-md-12">
							<input asp-for="Id" value="@Model.Id" hidden />
							<input asp-for="Type" value="code" hidden />
							<div class="form-group mb-3">
								<label for="name">
									Code
								</label>
								<input id="name"
									   type="text"
									   class="form-control validate"
									   asp-for="Code" />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									Amount
								</label>
								<input id="brand"
									   type="text"
									   asp-for="Amount"
									   class="form-control validate"
									   required />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									Start Date
								</label>
								<input id="datePicker"
									   type="date"
									   asp-for="StartDate"
									   class="form-control validate" />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									End Date
								</label>
								<input id="datePicker"
									   type="date"
									   asp-for="EndDate"
									   class="form-control validate" />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									Quantity
								</label>
								<input id="quantity"
									   type="text"
									   asp-for="Quantity"
									   class="form-control validate"
									   required />
							</div>
						</div>
						<button type="submit" class="btn btn-primary btn-block text-uppercase">Save Change</button>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>