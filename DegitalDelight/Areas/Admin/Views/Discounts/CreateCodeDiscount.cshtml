@{
	Layout = "../Shared/_LayoutAdmin.cshtml";
}
@model Discount;
<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Add Code Discount</h2>
					</div>
				</div>
				<div>
					<form asp-action="CreateCodeDiscount" asp-controller="Discounts" method="post" class="tm-edit-product-form">
						<div class="col-xl-12 col-lg-12 col-md-12">
							<input asp-for="Type" value="code" hidden />
							<div class="form-group mb-3">
								<label for="name">
									Code
								</label>
								<input id="name"
									   type="text"
									   class="form-control validate"
									   asp-for="Code" />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									Amount
								</label>
								<input id="brand"
									   type="text"
									   asp-for="Amount"
									   class="form-control validate"
									   required/>
							</div>
							<div class="form-group mb-3">
								<label for="name">
									Start Date
								</label>
								<input id="datePicker"
									   type="date"
									   asp-for="StartDate"
									   class="form-control validate"
									   />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									End Date
								</label>
								<input id="datePicker"
									   type="date"
									   asp-for="EndDate"
									   class="form-control validate" />
							</div>
							<div class="form-group mb-3">
								<label for="name">
									Quantity
								</label>
								<input id="quantity"
									   type="text"
									   asp-for="Quantity"
									   class="form-control validate"
									   required/>
							</div>
						</div>
						<button type="submit" class="btn btn-primary btn-block text-uppercase">Add Code Discount Now</button>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>
<footer class="tm-footer row tm-mt-small">
	<div class="col-12 font-weight-light">
		<p class="text-center text-white mb-0 px-4 small">
			Copyright &copy; <b>2018</b> All rights reserved.

			Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
		</p>
	</div>
</footer>