@{ViewData["Title"] = "Admin";}


<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<title>Accounts - Product Admin Template</title>
	<link rel="stylesheet"
		  href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
	<!-- https://fonts.google.com/specimen/Roboto -->
	<link rel="stylesheet" href="~/css/fontawesome.min.css">
	<!-- https://fontawesome.com/ -->
	<link rel="stylesheet" href="~/css/bootstrap.min.css" />
	<!-- https://getbootstrap.com/ -->
	<link rel="stylesheet" href="~/css/templatemo-style.css">
	<link rel="stylesheet" href="~/etrade/assets/css/vendor/flaticon/flaticon.css" />
	<link rel="stylesheet" href="~/etrade/assets/css/vendor/slick-theme.css">
	<!--
	Product Admin CSS Template
	https://templatemo.com/tm-524-product-admin
	-->
</head>

<body id="reportsPage">
	<nav class="navbar navbar-expand-xl">
		<div class="container h-100">
			<a class="navbar-brand" asp-action="Dashboard" asp-controller="Dashboard">
				<h1 class="tm-site-title mb-0">Product Admin</h1>
			</a>
			<button class="navbar-toggler ml-auto mr-0"
					type="button"
					data-toggle="collapse"
					data-target="#navbarSupportedContent"
					aria-controls="navbarSupportedContent"
					aria-expanded="false"
					aria-label="Toggle navigation">
				<i class="fas fa-bars tm-nav-icon"></i>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mx-auto h-100">
					<li class="nav-item">
						<a class="nav-link" id="Dashboard" asp-action="Dashboard" asp-controller="Dashboard">
							<i class="fas fa-tachometer-alt"></i> Dashboard
							<span class="sr-only">(current)</span>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="Product" asp-action="Index" asp-controller="Products">
							<i class="fas fa-shopping-cart"></i> Products
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="Supply" asp-action="Supply" asp-controller="Supply">
							<i class="fa fa-cubes"></i> Supply
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="Comment" asp-action="Index" asp-controller="Comment">
							<i class="far fa-comment"></i> Comments
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="Admin" asp-action="Account" asp-controller="Account">
							<i class="far fa-user"></i> Accounts
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="Discount" asp-action="Index" asp-controller="Discounts">
							<i class="fas fa-tag"></i> Discounts
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" id="Warranty" asp-action="Warranty" asp-controller="Warranty">
							<i class="fa fa-shield-alt"></i> Warranties
						</a>
					</li>
				</ul>
				<ul class="navbar-nav">
					<li class="nav-item">
						<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Homepage", "Home", new { area = "" })">
							<a onclick="Logout()" style="color: white">Admin, <b>Logout</b></a>
						</form>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	@RenderBody()

	<footer class="tm-footer row tm-mt-small">
		<div class="col-12 font-weight-light">
			<p class="text-center text-white mb-0 px-4 small">
				Copyright &copy; <b>2024</b> All rights reserved.

				Degital Delight: <a rel="nofollow noopener" href="https://DegitalDelight.com" class="tm-footer-link">DegitalDelight</a>
			</p>
		</div>
	</footer>
	<script src="~/js/jquery-3.3.1.min.js"></script>
	<!-- https://jquery.com/download/ -->
	<script src="~/js/bootstrap.min.js"></script>
	<!-- https://getbootstrap.com/ -->
	<script src="~/js/tooplate-scripts.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
	<script>
		var navClass = document.getElementsByClassName("nav-link");
		var path = window.location.href;

		for (i = 0; i < navClass.length; i++) {
			if (path.includes(navClass[i].href)) {
				navClass[i].classList.add("active");
			}
		}
		function Logout() {
            document.getElementById("logoutForm").submit();
        }
	</script>
</body>
</html>

