@{
	Layout = "../Shared/_LayoutAdmin.cshtml";
}
@model Warranty;
<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Chỉnh sửa bảo hành</h2>
					</div>
				</div>
				<div>
					<form asp-action="Edit" asp-controller="Warranty" method="post" class="tm-edit-product-form">
						<div class="col-xl-12 col-lg-12 col-md-12">
							<div class="form-group mb-3">
								<label for="name">
									Tên bảo hành
								</label>
								<input id="Name"
									   type="text"
									   class="form-control validate"
									   required
									   asp-for="Name" />
							</div>
							<div class="form-group mb-3">
								<label for="price">
									Thời gian bảo hành (tháng)
								</label>
								<input id="Duration"
									   type="number"
									   class="form-control validate"
									   required
									   asp-for="Duration" />
							</div>
							<div class="form-group mb-3">
								<label for="price">
									Mô tả
								</label>
								<textarea id="Description"
									   type="text"
									   class="form-control validate"
									   rows="3"
									   required
									   asp-for="Description"></textarea>
							</div>
						</div>
						<button type="submit" class="btn btn-primary btn-block text-uppercase">Lưu thay đổi</button>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>