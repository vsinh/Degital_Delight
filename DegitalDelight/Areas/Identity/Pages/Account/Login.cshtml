@page
@model LoginModel
@{
	Layout = "./_LayoutAccount.cshtml";
}
<div class="axil-signin-area">

	<!-- Start Header -->
	<div class="signin-header">
		<div class="row align-items-center">
			<div class="col-sm-4">
				<a asp-action="Homepage" asp-controller="Home" class="site-logo"><img src="~/etrade/assets/images/logo/logo.png" alt="logo"></a>
			</div>
			<div class="col-sm-8">
				<div class="singin-header-btn">
					<p>Chưa là thành viên?</p>
					<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="axil-btn btn-bg-secondary sign-up-btn">Sign Up Now</a>
				</div>
			</div>
		</div>
	</div>
	<!-- End Header -->

	<div class="row">
		<div class="col-xl-4 col-lg-6">
			<div class="axil-signin-banner bg_image bg_image--9">
				<h3 class="title">Chúng tôi cung cấp dịch vụ tốt nhất</h3>
			</div>
		</div>
		<div class="col-lg-6 offset-xl-2">
			<div class="axil-signin-form-wrap">
				<div class="axil-signin-form">
					<h3 class="title">Đăng nhập.</h3>
					<p class="b2 mb--55">Enter your detail below</p>
					<form class="singin-form" id="account" method="post">
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Input.Email" type="email" class="form-control" name="email" placeholder="annie@example.com">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Input.Password" type="password" class="form-control" name="password" placeholder="123456789">
						</div>
						<div class="form-group d-flex align-items-center justify-content-between">
							<button type="submit" class="axil-btn btn-bg-primary submit-btn">Đăng nhập</button>
							<a asp-page="./ForgotPassword" class="forgot-btn">Quên mật khẩu?</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>